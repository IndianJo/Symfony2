{# src/JO/PlatformBundle/Resources/views/Advert/add.html.twig #}

{% extends "JOPlatformBundle::layout.html.twig" %}

{% block title %}
  Ajouter une annonce - {{ parent() }}
{% endblock %}

{% block joplatform_body %}

  <h2>Ajouter une annonce</h2>

  {{ include("JOPlatformBundle:Advert:form.html.twig") }}

  <p>
    Vous créez une annonce, celle-ci sera ajoutée au menu.
  </p>

  <p>
    <a href="{{ path('jo_platform_view', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>
  </p>

{% endblock %}