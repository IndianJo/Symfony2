{# src/JO/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "JOPlatformBundle::layout.html.twig" %}
{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block joplatform_body %}

<h2>{{ advert.getTitle() }}</h2>
  <i>Par {{ advert.getAuthor() }}, le {{ advert.getDate()|date('d/m/Y') }}</i>

  <div class="well">
    {{ advert.getContent() }}
  </div>

  <p>
    <a href="{{ path('jo_platform_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  la liste
    </a>
    <a href="{{ path('jo_platform_edit', {'id': advert.getId()}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('jo_platform_delete', {'id': advert.getId()}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>
  
{% endblock %}